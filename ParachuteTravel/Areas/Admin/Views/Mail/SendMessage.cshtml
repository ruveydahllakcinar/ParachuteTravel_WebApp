@model ParachuteTravel.Areas.Admin.Models.MailRequestViewModel
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-xl">
            <div class="card mb-12">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Sender Mail</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-fullname">Receiver's Email Address</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bx-at"></i>
                                </span>
                                <input type="text" asp-for="ReceiverMail" class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-fullname">Subject</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bx-text"></i>
                                </span>
                                <input type="text" asp-for="Subject" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-fullname">Content</label>
                            <div class="input-group input-group-merge">
                                <textarea type="text" asp-for="Content" class="form-control" rows="5" ></textarea>
                            </div>
                        </div>
                        <button class="btn btn-outline-primary" onclick="alert('Email has been sended')">Send Mail</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

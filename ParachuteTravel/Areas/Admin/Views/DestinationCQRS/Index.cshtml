@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">CQRS Tour Values</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>

                    <th>#</th>
                    <th>City</th>
                    <th>Day-Nights</th>
                    <th>Price</th>
                    <th>Capacity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var result in Model)
                {
                    count++;
                <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                    <td>@result.city</td>
                    <td>@result.daynight</td>
                    <td>@result.price $</td>
                    <td>@result.capacity</td>

                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                <a class="dropdown-item" href="#"><i class="bx bx-trash me-1"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                    <td></td>
                </tr>
                }
            </tbody>

        </table>
        <div class="btn-sm mt-2 pl-3 mb-2">
            <a href="#" class="btn btn-outline-primary">Add New Tour Routes</a>
        </div>
    </div>
</div>


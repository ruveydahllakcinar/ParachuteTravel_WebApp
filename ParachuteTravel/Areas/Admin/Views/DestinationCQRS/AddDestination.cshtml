@model CreateDestinationCommands
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-xl">
            <div class="card mb-12">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Add New Destination(CQRS)</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-fullname">City Name</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bx-building-house"></i>
                                </span>
                                <input type="text" asp-for="CityName" class="form-control" placeholder="Please enter city name" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-company">Day/Night</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bx-sun"></i>
                                </span>
                                <input type="text" asp-for="DayNight" class="form-control" placeholder="Day/Night" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-company">Price</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bx-dollar"></i>
                                </span>
                                <input type="number" asp-for="Price" class="form-control" placeholder="Price" />
                            </div>
                        </div>
                       
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-company">Capacity</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bxs-user"></i>
                                </span>
                                <input type="text" asp-for="Capacity" class="form-control" placeholder="Capacity" />
                            </div>
                        </div>
                   
                        <button class="btn btn-outline-primary">Create</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@model VisitorViewModel

@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adding Visitors With API</h4>

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="hidden" asp-for="VisitorId" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Name & Surname</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Surname</label>
                    <input type="text" asp-for="Surname" class="form-control" id="exampleInputName1" placeholder="Surname">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">City</label>
                    <input type="text" asp-for="City" class="form-control" id="exampleInputName1" placeholder="City">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Country</label>
                    <input type="text" asp-for="Country" class="form-control" id="exampleInputName1" placeholder="Country">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Mail</label>
                    <input type="email" asp-for="Mail" class="form-control" id="exampleInputName1" placeholder="Mail">
                </div>


                <div class="btn-sm mt-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>


@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">API Visitor List</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name & Surname</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Mail</th>                  
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var visitor in Model)
                {
                    count++;
                <tr>
                    <td>@count</td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>@visitor.Name @visitor.Surname</strong></td>
                    <td>@visitor.City</td>
                    <td>@visitor.Country</td>
                    <td>@visitor.Mail</td>
                    
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Admin/VisitorApi/EditVisitor/@visitor.VisitorId"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                <a class="dropdown-item" href="/Admin/VisitorApi/DeleteVisitor/@visitor.VisitorId"><i class="bx bx-trash me-1"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>

        </table>
        <div class="btn-sm mt-2 pl-3 mb-2">
            <a href="/Admin/VisitorApi/AddVisitor" class="btn btn-outline-primary">Add New Visitor</a>
        </div>
    </div>
</div>


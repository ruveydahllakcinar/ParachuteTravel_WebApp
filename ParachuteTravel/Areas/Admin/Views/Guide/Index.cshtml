@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">Guide List</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Name & Surname</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var guide in Model)
                {
                    count++;
                <tr>
                    <td>@count</td>
                    <td>
                        <img src="~/GuideImage/@guide.Image" alt="" class="avatar avatar-xl pull-up rounded-circle" data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" />
                    </td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@guide.Name</strong></td>
                    <td>@guide.Description</td>

                    @{
                        if (guide.Status == true)
                        {
                            <td><a href="/Admin/Guide/ChangeToFalse/@guide.GuideId" class="btn btn-outline-secondary">Passive</a></td>
                        }
                        else
                        {
                            <td><a href="/Admin/Guide/ChangeToTrue/@guide.GuideId" class="btn btn-outline-success">Active</a></td>
                        }

                    }

                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Admin/Guide/EditGuide/@guide.GuideId"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>

                }

            </tbody>

        </table>
        <div class="btn-sm mt-2 pl-3 mb-2">
            <a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">New Add Guide</a>
        </div>
    </div>

</div>

@model IEnumerable<BookingHotelSearchViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    double score;
}

<div class="card">
    <h3 class="card-header">Booking Hotel Reservation List</h3>
    <h5 class="card-header">Searched City: Paris -France</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Hotel Name</th>
                    <th>Hotel Score</th>
                    <th>Hotel Review</th>
                    <th>Hotel Details</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var result in Model)
                {
                    count++;
                <tr>
                    <td>@count</td>
                    <td>@result.hotel_name</td>
                    @{ score =double.Parse(result.review_score.ToString()) / 10; }
                    <td>@score</td>
                    <td>@result.review_score_word</td>
                    <td><a href="" class="btn btn-outline-success">Details</a></td>
                </tr>
                }
            </tbody>

        </table>

    </div>
</div>



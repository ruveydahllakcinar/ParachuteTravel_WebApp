@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Tour Routes</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>City</th>
                    <th>Price</th>
                    <th>Capacity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var destination in Model)
                {
                <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@destination.CityName</strong></td>
                    <td>@destination.Price $</td>
                    <td>@destination.Capacity</td>

                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Destination/DestinationDetails/@destination.DestinationId"><i class="bx bx-show-alt me-1"></i> See on Site</a>
                                <a class="dropdown-item" href="/Admin/Destination/EditDestination/@destination.DestinationId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                <a class="dropdown-item" href="/Admin/Destination/DeleteDestination/@destination.DestinationId"><i class="bx bx-trash me-1"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                    <td></td>
                </tr>
                }
            </tbody>

        </table>
        <div class="btn-sm mt-2 pl-3 mb-2">
            <a href="/Admin/Destination/AddDestination" class="btn btn-primary">Add New Tour Route</a>
        </div>
    </div>
</div>

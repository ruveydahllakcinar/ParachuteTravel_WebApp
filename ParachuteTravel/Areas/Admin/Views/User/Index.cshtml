@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">User List</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name & Surname</th>
                    <th>User Name</th>
                    <th>Mail</th>
                    <th>Phone Number</th>
                    <th>Comments</th>
                    <th>Tour History</th>
                    <th>Actions</th>


                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var appuser in Model)
                {
                <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@appuser.Name @appuser.Surname</strong></td>
                    <td>@appuser.UserName</td>
                    <td>@appuser.Email</td>
                    <td>@appuser.PhoneNumber</td>
                    <td>
                        <a class="btn btn-outline-success btn-sm" href="/Admin/User/CommentUser/@appuser.Id"><i class="bx bx-comment-add me-1"></i>Comments</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-info btn-sm" href="/Admin/User/HistoryReservationUser/@appuser.Id"><i class="bx bx-history me-1"></i>Tour History</a>
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Admin/User/EditUser/@appuser.Id"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                <a class="dropdown-item" href="/Admin/User/DeleteUser/@appuser.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>

        </table>
        <div class="btn-sm mt-2 pl-3 mb-2">
            <a href="/Login/Register" class="btn btn-outline-primary">Add New User</a>
        </div>
    </div>
</div>

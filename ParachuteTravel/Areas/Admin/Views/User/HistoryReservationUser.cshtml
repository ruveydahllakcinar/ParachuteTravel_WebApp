@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "HistoryReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";


}

<div class="card">
    <h5 class="card-header">User's Past Reservation List</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name & Surname</th>
                    <th>Routes</th>
                    <th>Person Count</th>
                    <th>Date</th>
                    <th>Details</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var user in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>###</strong></td>
                        <td>@user.Destination.CityName</td>
                        <td>@user.PersonCount</td>
                        <td>@user.ReservationDate.ToString("dd.MM.yyyy")</td>
                        <td><a href="#" class="btn btn-outline-warning">Details</a></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>


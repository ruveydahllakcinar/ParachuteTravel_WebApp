@using EntityLayer.Concrete
@model List<Destination>
<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0">List of Current Trips</h6>
        </div>
        <div class="card-body p-3">
            <ul class="list-group">
                @foreach (var destination in Model)
                {
                    <li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
                        <div class="avatar me-3">
                            <img src="@destination.Image" alt="kal" class="border-radius-lg shadow">
                        </div>
                        <div class="d-flex align-items-start flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@destination.CityName</h6>
                            <p class="mb-0 text-xs">@destination.ShareDate.ToString("dd.MM.yyyy")</p>
                        </div>
                        <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="/Users/Reservation/NewReservation/@destination.DestinationId">Book Now!</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>

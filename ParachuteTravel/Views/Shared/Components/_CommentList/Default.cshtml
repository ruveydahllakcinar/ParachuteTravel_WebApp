@using EntityLayer.Concrete
@model List<Comment>
<div class="comments mt-5">
    <h4 class="side-title ">Comments (@ViewBag.v)</h4>
    @foreach (var comment in Model)
    {
        <div class="media mt-4">
            <div class="img-circle">
                <img src="~/UserImages/@comment.AppUser.ImageUrl" class="img-fluid" alt="...">
            </div>
            <div class="media-body">

                <ul class="time-rply mb-2">
                    <li>
                        <a href="#URL" class="name mt-0 mb-2 d-block">@comment.AppUser.Name @comment.AppUser.Surname</a>
                        @comment.CommentDate.ToString("ddd, dd MMM yyy")
                    </li>
                    <li class="reply-last">
                        <a href="#reply" class="reply">
                            Reply
                        </a>
                    </li>
                </ul>
                <p>
                  @comment.CommentContent
                </p>
            </div>
        </div>

    }

</div>
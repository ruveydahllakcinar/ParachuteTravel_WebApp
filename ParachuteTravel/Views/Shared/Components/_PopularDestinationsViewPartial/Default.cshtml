@using EntityLayer.Concrete
@model List<Destination>
<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-2">
            <h6 class="sub-title">Visit</h6>
            <h3 class="hny-title">Popular Destinations</h3>
        </div>
        <div class="row bottom-ab-grids">
            @foreach (var destination in Model)
            {
                <div class="col-lg-6 subject-card mt-lg-0 mt-4">
                    <div class="subject-card-header mt-3 p-4">
                        <a href="#" class="card_title p-lg-4d-block">
                            <div class="row align-items-center">
                                <div class="col-sm-5 subject-img">
                                    <img src="@destination.Image" class="img-fluid" alt="">
                                </div>
                                <div class="col-sm-7 subject-content mt-sm-0 mt-4">
                                    <h4>@destination.CityName</h4>
                                    <p>@destination.DayNight</p>
                                    <div class="dst-btm">
                                        <h6 class=""> Prices starting from </h6>
                                        <span>$@destination.Price</span>
                                    </div>
                                    <p class="sub-para">@destination.Description.ToString().Substring(0, (destination.Description.Length > 50) ? 50 : destination.Description.Length) ...</p>
                                </div>
                            </div>
                        </a>
                    </div>


                </div>
            }
        </div>
    </div>
</section>

@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<body>
    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Routes </h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="#url">Home</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Routes </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!--  Work gallery section -->
    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">Routes</h3>
                <div class="row">
                    @foreach (var destination in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6">
                            <div class="column">
                                  <a href="/Destination/DestinationDetails/@destination.DestinationId">
                                <img src="@destination.Image" alt="" class="img-fluid" style="width:370px; height:300px;"></a>
                                <div class="info">
                                    <h4><a href="/Destination/DestinationDetails/@destination.DestinationId">@destination.CityName</a></h4>
                                    <p>@destination.DayNight</p>
                                    <div class="dst-btm">
                                        <h6 class="">Start From </h6>
                                        <span>$@destination.Price</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </section>
</body>
